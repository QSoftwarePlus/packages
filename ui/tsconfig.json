{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es2017"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "dist",
      "jsx": "react",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  