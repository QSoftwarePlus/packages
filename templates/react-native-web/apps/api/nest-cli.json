{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "**/*.png",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "**/*.html",
        "outDir": "dist/templates",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}